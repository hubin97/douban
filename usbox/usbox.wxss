/* usbox/usbox.wxss */
.scroll-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}

.swiper-item {
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx dashed #000;
  /* background-color: #999; */
}

.filmicon {
  margin: 20rpx;
  width: 150rpx;
  height: 200rpx;
  flex: 0 0 150rpx;
  /* align-content: center; */
  /* background-color: blue; */
}
.decs-view {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  padding-left: 0rpx;
  justify-content: space-evenly;
  flex-wrap: nowrap;
}
.title {
  font-size: 25rpx;
  color: blue;
  flex-wrap: nowrap;
}
.detail {
  font-size: 20rpx;
  color: black;
  /* height: 80rpx; */
}
.rating {
  font-size: 20rpx;
  color: #f00;
}